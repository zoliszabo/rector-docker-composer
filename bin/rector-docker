#!/bin/sh

# Docker image configuration
DOCKER_IMAGE="zoliszabo/rector:2.1.4"

# Check if running in interactive terminal environment
if [ -t 0 ] && [ -t 1 ]; then
    # Running in interactive terminal - use -it flags
    docker run --rm -it -v "$(pwd)":/app "$DOCKER_IMAGE" rector "$@"
else
    # Running in non-interactive environment (CI/scripts) - skip -it flags
    docker run --rm -v "$(pwd):/project" "$DOCKER_IMAGE" "$@"
fi
